<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/content/loader.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="~/Content/giaovien.css" rel="stylesheet" />
    <script src="~/Content/Loader.js"></script>
</head>
<div id="loader" class="loader">
    <img style="margin-left:45%"src="/Content/images/loadergif.gif" alt="Loading..."> <!-- Ảnh GIF -->
    <p>quá trình này có thể mất vài phút</p> <!-- Dòng chữ -->

</div>
<body class="bg-gray-100">
    
    <div class="flex h-screen">
        <!-- Sidebar -->
        <div class="w-1/6 sidebar-bg h-screen p-4 border border-gray-300 rounded-lg shadow-2xl">
            <div class="text-gray-500 text-lg mb-4">Trang giáo viên</div>
            <ul class="space-y-2">
                <li>
                    <a id="btnProfile" class="flex items-center text-gray-700 w-full text-left focus:outline-none hover:bg-gray-200 p-2 rounded"
                       href="@Url.Action("Index", "GiaoVien", new {id = ViewData["GiaoVien"]})">
                        <i class="fas fa-user mr-2"></i> Thông tin người dùng
                    </a>
                </li>
                <li>
                    <a id="btnDiemDanh" class="flex items-center text-gray-700 w-full text-left focus:outline-none hover:bg-gray-200 p-2 rounded"
                            href="@Url.Action("Index", "DiemDanh", new {id = ViewData["GiaoVien"]})">
                        <i class="fas fa-tachometer-alt mr-2"></i> Điểm danh
                    </a>
                </li>
                <li>
                    <a id="btnNK" class="flex items-center text-gray-700 w-full text-left focus:outline-none hover:bg-gray-200 p-2 rounded"
                       href="@Url.Action("Index", "NgoaiKhoa", new {id = ViewData["GiaoVien"]})">
                        <i class="fas fa-user mr-2"></i> Ngoại Khóa
                    </a>
                </li>
                <li>
                    <a id="btnNKGV" class="flex items-center text-gray-700 w-full text-left focus:outline-none hover:bg-gray-200 p-2 rounded"
                       href="@Url.Action("Index", "NgoaiKhoaGiaoVien", new {id = ViewData["GiaoVien"]})">
                        <i class="fas fa-user mr-2"></i> Ngoại khóa đã đăng ký
                    </a>
                </li>
                <li>
                    <a id="btnLopHoc" class="flex items-center text-gray-700 w-full text-left focus:outline-none hover:bg-gray-200 p-2 rounded"
                            href="@Url.Action("Index", "LopHoc", new {id = ViewData["GiaoVien"]})">
                        <i class="fas fa-icons mr-2"></i> Các lớp của tui
                    </a>
                </li>
                <li>
                    <button id="btnLogout" class="flex items-center text-gray-700 w-full text-left focus:outline-none hover:bg-gray-200 p-2 rounded">
                        <i class="fas fa-sign-in-alt mr-2"></i> Đăng xuất
                    </button>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col h-full">
            <header class="bg-gradient text-white flex justify-between items-center px-8 py-4 rounded-b-3xl shadow-lg">
                <div class="text-xl font-semibold">Xin chào</div>
                <div class="relative">
                    <input type="text" placeholder="Search" class="bg-white text-gray-700 rounded-full px-4 py-2 focus:outline-none shadow-sm">
                </div>
            </header>
            <main class="flex-1 bg-white p-8 rounded-t-3xl shadow-lg mt-4 overflow-y-auto">
                
                <!-- Nội dung động sẽ hiển thị ở đây -->
                @RenderBody()
                @RenderSection("Scripts", required: false)
                @RenderSection("Styles", required: false)
            </main>
        </div>
    </div>

    <!-- Modal Logout -->
    <div id="logoutModal" class="fixed inset-0 bg-gray-900 bg-opacity-50 hidden justify-center items-center">
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-2xl font-bold mb-4">Bạn có chắc chắn muốn đăng xuất không?</h2>
            <div class="flex justify-end space-x-4">
                <button id="cancelLogout" class="bg-gray-300 text-gray-700 px-4 py-2 rounded">Hủy</button>
                <button id="confirmLogout" class="bg-red-500 text-white px-4 py-2 rounded">Đăng xuất</button>
            </div>
        </div>
    </div>
    <script>
        function navigateTo(url) {
            window.location.href = url; // Điều hướng đến URL được truyền vào
        }
    </script>
</body>
</html>

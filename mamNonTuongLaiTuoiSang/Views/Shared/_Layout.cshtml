<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="~/Content/giaovien.css" rel="stylesheet" />
</head>
<body class="bg-gray-100">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <div class="w-1/6 bg-white shadow-xl rounded-lg p-4 h-full">
            <div class="flex items-center justify-center py-6 space-x-2">
                <img src="~/content/images/logo_truong_phung_gui.jpg" class="w-16 h-16 rounded-full shadow-md" alt="Logo" />
                <div class="text-2xl font-semibold text-gray-700">Trang giáo viên</div>
            </div>
            <nav class="mt-8 space-y-2">
                <a id="btnProfile" class="flex items-center text-gray-700 w-full text-left focus:outline-none hover:bg-gray-200 p-2 rounded sidebar-item btn"
                   href="@Url.Action("Index", "GiaoVien", new {id = ViewData["GiaoVien"]})">
                    <i class="fas fa-user mr-3"></i> Thông tin cá nhân
                </a>
                <button id="btnNo1" class="flex items-center text-gray-700 w-full text-left focus:outline-none hover:bg-gray-200 p-2 rounded sidebar-item btn"
                        onclick="navigateTo('/DiemDanh/Index')">
                    <i class="fas fa-tachometer-alt mr-3"></i> Điểm danh
                </button>
                <a id="btnNo2" class="flex items-center text-gray-700 w-full text-left focus:outline-none hover:bg-gray-200 p-2 rounded sidebar-item btn"
                   href="@Url.Action("Index", "LopHoc", new {id = ViewData["GiaoVien"]})">
                    <i class="fas fa-icons mr-3"></i> Các lớp của tui
                </a>

                <a id="btnNo3" class="flex items-center text-gray-700 w-full text-left focus:outline-none hover:bg-gray-200 p-2 rounded sidebar-item btn"
                   href="@Url.Action("Thunhap", "GiaoVien", new { id = ViewData["GiaoVien"] })">
                    <i class="fas fa-table mr-3"></i> Thu nhập
                </a>
                <button id="btnLogout" class="flex items-center text-gray-700 w-full text-left focus:outline-none hover:bg-gray-200 p-2 rounded sidebar-item btn"
                        onclick="navigateTo('/Account/Login')">
                    <i class="fas fa-sign-in-alt mr-3"></i> Đăng xuất
                </button>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col h-full">
            <header class="bg-gradient text-white flex justify-between items-center px-8 py-4 rounded-b-3xl shadow-lg">
                <div class="text-xl font-semibold">Xin chào</div>
                <div class="relative">
                    <input type="text" placeholder="Search" class="bg-white text-gray-700 rounded-full px-4 py-2 focus:outline-none shadow-sm">
                </div>
            </header>
            <main class="flex-1 bg-white p-8 rounded-t-3xl shadow-lg mt-4 overflow-y-auto">
                <!-- Nội dung động sẽ hiển thị ở đây -->
                @RenderBody()
                @RenderSection("Scripts", required: false)
                @RenderSection("Styles", required: false)
            </main>
        </div>
    </div>

    <!-- Modal Logout -->
    <div id="logoutModal" class="fixed inset-0 bg-gray-900 bg-opacity-50 hidden justify-center items-center">
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-2xl font-bold mb-4">Bạn có chắc chắn muốn đăng xuất không?</h2>
            <div class="flex justify-end space-x-4">
                <button id="cancelLogout" class="bg-gray-300 text-gray-700 px-4 py-2 rounded">Hủy</button>
                <button id="confirmLogout" class="bg-red-500 text-white px-4 py-2 rounded">Đăng xuất</button>
            </div>
        </div>
    </div>
    <script>
        function navigateTo(url) {
            window.location.href = url; // Điều hướng đến URL được truyền vào
        }
    </script>
</body>
</html>

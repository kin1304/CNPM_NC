@model IEnumerable<mamNonTuongLaiTuoiSang.Models.VoucherCuaPh>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutPh.cshtml";
}

<h1>Index</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
        <strong>@TempData["SuccessMessage"]</strong>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <strong>@TempData["ErrorMessage"]</strong>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>
                Trạng thái
            </th>
            <th>
                Mã voucher
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @if (item.Trangthai == 0)
                    {
                        <span>Đã dùng</span>
                    }
                    else if (item.Trangthai == 1)
                    {
                        <span>Chưa dùng</span>
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdVoucher)
            </td>
            <td>
                <td>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="idPh" value="@item.IdPh" />
                        <input type="hidden" name="idVoucher" value="@item.IdVoucher" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc muốn xóa voucher này?')">Xóa</button>
                    </form>
                </td>
            </td>
        </tr>
}
    </tbody>
</table>

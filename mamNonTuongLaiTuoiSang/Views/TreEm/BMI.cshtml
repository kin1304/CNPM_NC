    <h2 id ="lytuong" class="text-lg font-semibold mb-2"></h2>
    <h2 class="text-lg font-semibold mb-2">CÂN NẶNG TỐI THIỂU CỦA TRẺ</h2>
    <h2 id="toithieu" class="text-lg font-semibold mb-2"> <h2>
    <h2 class="text-lg font-semibold mb-4">CÂN NẶNG TỐI ĐA CỦA TRẺ</h2>
    <h2 id="toida" class="text-lg font-semibold mb-2"></h2>
</div>
<img id="khongthay" style="display:block" src="https://mysun.vn/wp-content/uploads/2021/06/bang-chieu-cao-can-nang-chuan-cua-be-trai-be-gai-tre-duoi-10-tuoi.jpg " />
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Content/BMI.js"></script>
}
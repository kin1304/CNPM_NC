@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{

    ViewData["Title"] = "BMI";
    Layout = "~/Views/Shared/_LayoutPh.cshtml";
}

<div id="loader" class="loader">
</div>
<h1 class="text-black" style="text-align:center; font-size:30px">Chỉ số BMI</h1>
<div class="text-black rounded-t p-8 select_box">
    <h2>Chọn trẻ em: </h2>
    <select id="childSelect" class="form-control" asp-items="@(ViewData["IdHocSinh"] as SelectList)">
        <option value="">-- Chọn trẻ em --</option>
    </select>
</div>
<div id="Bmi" class="text-center" style="display:none">
    <h1 class="text-red-600 text-xl font-bold mb-4">KẾT QUẢ BMI</h1>
    <h2 id="chiso" class="text-lg font-semibold mb-2"></h2>
    <div class="relative w-full max-w-md mx-auto mb-4">
        <div class="flex justify-between">
            <div class="h-2 w-1/6 bg-blue-200"></div>
            <div class="h-2 w-1/6 bg-blue-300"></div>
            <div class="h-2 w-1/6 bg-blue-400"></div>
            <div class="h-2 w-1/6 bg-yellow-400"></div>
            <div class="h-2 w-1/6 bg-orange-400"></div>
            <div class="h-2 w-1/6 bg-red-500"></div>
        </div>
        <div id="phantram" class="absolute transform -translate-x-1/2 -translate-y-1/2 mt-1">
            <i class="fas fa-caret-up text-blue-500 text-2xl"></i>
        </div>
    </div>
    <p id="trangthai" class="text-gray-700 mb-4"></p> <br />
    <h2 class="text-lg font-semibold mb-2">CHIỀU CAO VÀ CÂN NẶNG HIỆN TẠI CỦA TRẺ</h2>
    <h2 id="hientai" class="text-lg font-semibold mb-2"></h2>

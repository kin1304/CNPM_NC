@foreach (var item in Model)
{
    <button onmouseover="playSound1()"
    onmouseout="stopSound1()" class="w-3/10">
        <a class="card " href="@Url.Action("babyinfo", "TreEm", new { id = item.IdHs })">
            <img src="~/Content/images/nha_ava_fb.jpg" alt="Avatar" class="avatar">
            <div class="info">
                <div class="name">@Html.DisplayFor(modelItem => item.TenHs)</div>
                <div class="details">@Html.DisplayFor(modelItem => item.NamSinh)</div>
                <div class="details">@Html.DisplayFor(modelItem => item.CanNang)</div>
            </div>
        </a>
    </button>
}
<script src="~/Content/GiaoDienQuanLyDanhSachTre.js"></script>
@model mamNonTuongLaiTuoiSang.Models.HocSinh
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Chỉnh sửa thông tin";
    Layout = "~/Views/Shared/_LayoutPh.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/Content/EditBabyLayout.css">
}

<div id="loader" class="loader" style="display:none">

</div>
<div class="container">
    <div class="child-info-header">
        <h1>Chỉnh Sửa Thông Tin Trẻ</h1>
    </div>
    <div class="child-info">
        <div class="profile-pic">
            <img src="~/Content/images/nha_da_banh.jpg" alt="Ảnh trẻ">
        </div>
        <div class="child-details">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdHs" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdPh" />
                <div class="col-span-2">
                    <label asp-for="TenHs" class="block text-gray-700">Tên Trẻ Em</label>
                    <input asp-for="TenHs" type="text" class="w-full mt-1 p-2 border border-gray-300 rounded" value="@Model.TenHs">
                    <span asp-validation-for="TenHs" class="text-danger"></span>
                </div>
                <div class="col-span-2">
                    <label asp-for="NamSinh" class="block text-gray-700">Năm Sinh</label>
                    <input asp-for="NamSinh" type="text" class="w-full mt-1 p-2 border border-gray-300 rounded" value="@Model.NamSinh">
                    <span asp-validation-for="NamSinh" class="text-danger"></span>
                </div>
                <div class="col-span-2">
                    <label asp-for="GioiTinh" class="control-label">Giới Tính</label>
                    <select asp-for="GioiTinh" class="form-control">
                        <option value="Nam" selected="@Model.GioiTinh == " Nam"">Nam</option>
                        <option value="Nữ" selected="@Model.GioiTinh == " Nữ"">Nữ</option>
                    </select>
                    <span asp-validation-for="GioiTinh" class="text-danger"></span>
                </div>

                <div class="col-span-2">
                    <label asp-for="CanNang" class="block text-gray-700">Cân Nặng</label>
                    <input asp-for="CanNang" type="text" class="w-full mt-1 p-2 border border-gray-300 rounded" value="@Model.CanNang">
                    <span asp-validation-for="CanNang" class="text-danger"></span>
                </div>
                <div class="col-span-2">
                    <label asp-for="ChieuCao" class="block text-gray-700">Chiều Cao</label>
                    <input asp-for="ChieuCao" type="text" class="w-full mt-1 p-2 border border-gray-300 rounded" value="@Model.ChieuCao">
                    <span asp-validation-for="ChieuCao" class="text-danger"></span>
                </div>

                <div class="text-black px-4 py-2 rounded">
                    <input type="submit" value="Save" class="btn btn-primary bg-green-100"  />
                </div>
            </form>
        </div>
    </div>

</div>
